{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "src/api/bot.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/bot",
            "dest": "src/api/bot.js"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/bot",
            "schedule": "0 20 * * *"
        }
    ]
}